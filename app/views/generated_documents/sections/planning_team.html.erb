<% if local_assigns.fetch(:render_base_styles, true) %>
  <%= render "generated_documents/sections/base_styles" %>
<% end %>

<style>
  .generated-template--planning-team {
    gap: 1.6rem;
    --generated-document-content-padding-x: 0.15in;
    --generated-document-content-padding-top: 0.5in;
    --generated-document-content-padding-bottom: 1in;
  }

  .generated-template--planning-team__grid {
    display: grid;
    gap: 0.9rem;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  }

  .generated-template--planning-team__card {
    border: 1px solid rgba(45, 28, 18, 0.12);
    border-radius: 0.55rem;
    background: rgba(255, 255, 255, 0.9);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    text-align: center;
  }

  .generated-template--planning-team__photo {
    position: relative;
    width: 100%;
    aspect-ratio: 3 / 2;
    background: rgba(45, 28, 18, 0.08);
    display: grid;
    place-items: center;
    color: #2d1c12;
    font-size: 1.75rem;
    font-weight: 600;
    letter-spacing: 0.08em;
  }

  .generated-template--planning-team__photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .generated-template--planning-team__details {
    padding: 1rem 1.1rem 1.3rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.35rem;
  }

  .generated-template--planning-team__name {
    margin: 0;
    font-size: 1.25rem;
    letter-spacing: 0.05em;
  }

  .generated-template--planning-team__title {
    margin: 0;
    font-size: 1rem;
    color: rgba(45, 28, 18, 0.75);
  }

  .generated-template--planning-team__empty {
    font-style: italic;
    color: #5b4639;
  }
</style>

<div class="generated-template generated-template--planning-team">
  <%= render "generated_documents/sections/page_header", segment: @segment %>
  <% planners = @event.planner_team_members.includes(:user) %>
  <% if planners.any? %>
    <div class="generated-template--planning-team__grid">
      <% planners.each do |member| %>
        <% user = member.user %>
        <% avatar_uri = inline_global_asset_data_uri(user.avatar_global_asset) %>
        <article class="generated-template--planning-team__card">
          <div class="generated-template--planning-team__photo">
            <% if avatar_uri.present? %>
              <img src="<%= avatar_uri %>" alt="<%= user.name %>">
            <% else %>
              <span><%= user.name.to_s.split.map { |part| part.first }.join.first(2).presence || "PP" %></span>
            <% end %>
          </div>
          <div class="generated-template--planning-team__details">
            <p class="generated-template--planning-team__name"><%= user.name %></p>
            <p class="generated-template--planning-team__title"><%= user.title.presence || "Planner" %></p>
          </div>
        </article>
      <% end %>
    </div>
  <% else %>
    <p class="generated-template--planning-team__empty">No planners have been linked to this event yet.</p>
  <% end %>
</div>
