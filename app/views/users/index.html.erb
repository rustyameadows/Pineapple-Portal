<section class="stack">
  <header>
    <h1>Team Roster</h1>
    <p class="dashboard__meta">Invite teammates so they can contribute to every event.</p>
  </header>

  <p>
    <%= link_to "Add teammate", new_user_path, class: "dashboard__cta" %>
  </p>

  <% if @users.any? %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Joined</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at&.strftime("%b %e, %Y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="dashboard__empty">No teammates yet. Be the first to invite someone.</div>
  <% end %>
</section>
