<section class="prose">
  <h1>Pineapple Portal</h1>
  <p class="lead">Welcome aboard! This landing page confirms the app is wired to PostgreSQL.</p>

  <% if @users.any? %>
    <h2>Sample Users</h2>
    <ul>
      <% @users.each do |user| %>
        <li>
          <strong><%= user.name %></strong>
          <span>&lt;<%= user.email %>&gt;</span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No users yet. Run <code>bin/rails db:seed</code> to load the starter entries.</p>
  <% end %>
</section>
