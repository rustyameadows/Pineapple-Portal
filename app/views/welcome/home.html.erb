<section>
  <h1>Pineapple Portal</h1>
  <p>Welcome aboard! This landing page confirms the app is wired to PostgreSQL.</p>

  <% if @users.any? %>
    <h2>Sample Users</h2>
    <ul>
      <% @users.each do |user| %>
        <li>
          <strong><%= user.name %></strong>
          <span>&lt;<%= user.email %>&gt;</span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No users yet. Use the form below to create the first teammate.</p>
  <% end %>

  <h2>Add a User</h2>
  <%= form_with model: @user, url: users_path do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name, required: true %>
    </p>
    <p>
      <%= form.label :email %><br>
      <%= form.email_field :email, required: true %>
    </p>
    <p>
      <%= form.label :password %><br>
      <%= form.password_field :password, required: true %>
    </p>
    <p>
      <%= form.label :password_confirmation %><br>
      <%= form.password_field :password_confirmation, required: true %>
    </p>
    <p><%= form.submit "Create User" %></p>
  <% end %>
</section>
