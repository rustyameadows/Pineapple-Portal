<section class="prose">
  <h1>Pineapple Portal</h1>
  <p class="lead">Welcome aboard! This landing page confirms the app is wired to PostgreSQL.</p>

  <% if flash[:notice].present? %>
    <p class="flash notice"><%= flash[:notice] %></p>
  <% elsif flash[:alert].present? %>
    <p class="flash alert"><%= flash[:alert] %></p>
  <% end %>

  <% if @users.any? %>
    <h2>Sample Users</h2>
    <ul>
      <% @users.each do |user| %>
        <li>
          <strong><%= user.name %></strong>
          <span>&lt;<%= user.email %>&gt;</span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No users yet. Run <code>bin/rails db:seed</code> to load the starter entries.</p>
  <% end %>

  <h2>Add a User</h2>
  <%= form_with model: @user, url: users_path, class: "stack" do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name, required: true %>
    </div>
    <div>
      <%= form.label :email %>
      <%= form.email_field :email, required: true %>
    </div>
    <%= form.submit "Create User" %>
  <% end %>
</section>
