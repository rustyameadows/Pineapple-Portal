<section class="dashboard">
  <header class="dashboard__header">
    <h1>Event Dashboard</h1>
    <p class="dashboard__lead">Track every active event from one place.</p>
    <p class="dashboard__meta">
      Need questionnaire patterns? Visit the
      <%= link_to "template library", questionnaire_templates_path %>.
    </p>
  </header>

  <% if @events.any? %>
    <div class="event-card-grid">
      <% @events.each do |event| %>
        <%= render "events/card", event: event %>
      <% end %>
    </div>
  <% else %>
    <div class="dashboard__empty">
      <p>No active events yet.</p>
      <p>
        <%= link_to "Create your first event", new_event_path, class: "dashboard__cta" %>
      </p>
    </div>
  <% end %>
</section>
