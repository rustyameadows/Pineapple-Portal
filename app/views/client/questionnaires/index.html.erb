<section class="client-page">
  <header class="client-page__header">
    <h1>Questionnaires</h1>
    <p>Share details that help us tailor the experience. Completed questionnaires remain visible for easy reference.</p>
  </header>

  <% if @questionnaires.any? %>
    <ul class="client-list">
      <% @questionnaires.each do |questionnaire| %>
        <% status_label = questionnaire.finished? ? "Finished" : "In Progress" %>
        <li class="client-list__item">
          <span class="client-list__title">
            <%= link_to questionnaire.title, client_event_questionnaire_path(@event, questionnaire) %>
          </span>
          <span class="client-status-tag <%= questionnaire.finished? ? 'client-status-tag--finished' : 'client-status-tag--in-progress' %>">
            <%= status_label %>
          </span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="client-placeholder">
      <p>No questionnaires are available yet. Check back soon or reach out if youâ€™re expecting something here.</p>
    </div>
  <% end %>
</section>
