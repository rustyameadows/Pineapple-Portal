<section class="client-page">
  <header class="client-page__header">
    <h1>Decision Calendar</h1>
    <p>We’ll post upcoming approvals and milestones here so you always know what’s next.</p>
  </header>

  <% if @upcoming_items.any? %>
    <ul class="client-list">
      <% @upcoming_items.each do |item| %>
        <li>
          <strong><%= item[:title] %></strong>
          <span><%= item[:due_on]&.strftime('%B %-d, %Y') || "Date TBD" %></span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="client-placeholder">
      <p>No decisions are scheduled yet. Your planning team will add them as timelines firm up.</p>
    </div>
  <% end %>
</section>
