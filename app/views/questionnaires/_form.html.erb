<%= form_with model: [@event, @questionnaire], html: { class: "questionnaire-form stack" } do |form| %>
  <% if @questionnaire.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@questionnaire.errors.count, "error") %> prevented saving:</h2>
      <ul>
        <% @questionnaire.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title, required: true %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div class="questionnaire-form__checkbox">
    <%= form.label :is_template do %>
      <%= form.check_box :is_template %>
      Mark as template
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
