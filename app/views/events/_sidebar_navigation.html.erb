<aside class="event-sidebar">
  <div class="event-sidebar__brand">
    <%= link_to root_path, class: "event-sidebar__brand-link" do %>
      <span class="event-sidebar__brand-top">Pineapple</span>
      <span class="event-sidebar__brand-bottom">Productions</span>
    <% end %>
  </div>

  <div class="event-sidebar__context">
    <span class="event-sidebar__context-label">Currently Viewing</span>
    <h2 class="event-sidebar__event-name">
      <%= link_to event.name, event_path(event), class: "event-sidebar__event-link" %>
    </h2>
  </div>

  <% primary_links = [
    { label: "Questionnaires", url: event_questionnaires_path(event) },
    { label: "Calendars", url: event_calendars_path(event) },
    { label: "Documents", url: event_documents_path(event) },
    { label: "Signatures + Approvals", url: event_approvals_path(event) },
    { label: "Payments", url: event_payments_path(event) },
    { label: "Event Info", url: event_settings_path(event) }
  ] %>

  <nav class="event-sidebar__nav">
    <ul>
      <% primary_links.each do |link| %>
        <li>
          <%= link_to link[:label], link[:url], class: "event-sidebar__link#{' event-sidebar__link--stub' if link[:url] == '#'}" %>
        </li>
      <% end %>
    </ul>
  </nav>

  <% secondary_links = [
    { label: "Events", url: events_path },
    { label: "Documents", url: "#" },
    { label: "Templates", url: questionnaire_templates_path },
    { label: "Settings", url: settings_path }
  ] %>

  <nav class="event-sidebar__nav event-sidebar__nav--secondary">
    <ul>
      <% secondary_links.each do |link| %>
        <li>
          <%= link_to link[:label], link[:url], class: "event-sidebar__link#{' event-sidebar__link--stub' if link[:url] == '#'}" %>
        </li>
      <% end %>
    </ul>
  </nav>

  <div class="event-sidebar__auth">
    <% if logged_in? %>
      <span class="event-sidebar__auth-inline">Signed in as <strong><%= current_user.name %></strong></span>
      <%= button_to "Log out", logout_path, method: :delete, class: "event-sidebar__auth-link" %>
    <% else %>
      <%= link_to "Log in", login_path, class: "event-sidebar__auth-link" %>
    <% end %>
  </div>
</aside>
