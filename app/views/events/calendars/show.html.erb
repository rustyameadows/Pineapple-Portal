<% provide :page_shell do %>
  <div class="event-layout">
    <%= render "events/sidebar_navigation", event: @event %>

    <div class="event-layout__main">
      <%= render "shared/flash" %>

      <section class="event-section">
        <header class="event-section__header">
          <div>
            <p class="event-section__eyebrow"></p>
            <h2 class="event-section__title">Run of Show</h2>
            <p class="event-section__subtitle"></p>
          </div>
          <div class="event-calendars__schedule-actions">
            <%= link_to "Preview Timeline", timeline_preview_event_calendar_path(@event), class: "event-section__cta event-section__cta--secondary" %>
            <%= link_to "Add Item", new_event_calendar_item_path(@event, return_to: request.fullpath), class: "event-section__cta" %>
          </div>
        </header>

        <% if @items.any? %>
          <%= render "events/calendars/schedule_table",
                     items: @items,
                     calendar: @calendar,
                     group_by_date: @group_by_date,
                     show_tags: false,
                     show_edit_button: true,
                     item_link_proc: ->(item) { [item.title, edit_event_calendar_item_path(@event, item)] } %>
        <% else %>
          <div class="event-section__empty">
            <p>No items yet â€” start by adding your ceremony or kickoff milestone.</p>
          </div>
        <% end %>
	      </section>

	    </div>
	  </div>
	<% end %>
