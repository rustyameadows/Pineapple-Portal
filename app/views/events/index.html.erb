<section class="stack">
  <header class="dashboard__header">
    <h1>Events</h1>
    <p class="dashboard__meta">Manage every event, past or present.</p>
  </header>

  <p>
    <%= link_to "New Event", new_event_path, class: "dashboard__cta" %>
  </p>

  <h2>Active Events</h2>
  <% if @active_events.any? %>
    <div class="event-card-grid">
      <% @active_events.each do |event| %>
        <%= render "card", event: event %>
      <% end %>
    </div>
  <% else %>
    <div class="dashboard__empty">No active events yet.</div>
  <% end %>

  <% if @archived_events.any? %>
    <h2>Archived Events</h2>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Archived On</th>
        </tr>
      </thead>
      <tbody>
        <% @archived_events.each do |event| %>
          <tr>
            <td><%= link_to event.name, event_path(event) %></td>
            <td><%= event.archived_at&.strftime("%b %e, %Y") || "â€”" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</section>
