<h1>Events</h1>

<p><%= link_to "New Event", new_event_path %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dates</th>
      <th>Location</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td>
          <% if event.starts_on.present? %>
            <%= event.starts_on %> - <%= event.ends_on || event.starts_on %>
          <% else %>
            Not set
          <% end %>
        </td>
        <td><%= event.location.presence || "â€”" %></td>
        <td><%= link_to "View", event_path(event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
