<% provide :page_shell do %>
  <div class="event-layout event-layout--index">
    <%= render "events/sidebar_index" %>

    <div class="event-layout__main">
      <%= render "shared/flash" %>

      <section class="event-section">
        <header class="event-section__header">
          <div>
            <p class="event-section__eyebrow">Events</p>
            <h1 class="event-section__title">Active Projects</h1>
            <p class="event-section__lead">Manage every event, from kickoff through wrap.</p>
          </div>
          <div class="event-section__actions">
            <%= link_to "New Event", new_event_path, class: "event-section__cta" %>
          </div>
        </header>

        <div class="event-section__body">
          <% if @active_events.any? %>
            <div class="event-card-grid event-card-grid--two">
              <% @active_events.each do |event| %>
                <%= render "card", event: event %>
              <% end %>
            </div>
          <% else %>
            <div class="event-section__empty">No active events yet.</div>
          <% end %>
        </div>
      </section>

      <% if @archived_events.any? %>
        <section class="event-section">
          <header class="event-section__header">
            <div>
              <p class="event-section__eyebrow">Archive</p>
              <h2 class="event-section__title">Past Events</h2>
              <p class="event-section__lead">Reference historical work and revive proven plans.</p>
            </div>
          </header>

          <div class="event-section__body">
            <div class="event-card-grid event-card-grid--two">
              <% @archived_events.each do |event| %>
                <%= render "card", event: event %>
              <% end %>
            </div>
          </div>
        </section>
      <% end %>
    </div>
  </div>
<% end %>
